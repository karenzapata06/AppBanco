<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchCuenta1"
    android:orientation="vertical"
    >

    <TextView
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar cuenta"
        android:textStyle="bold"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:gravity="center">

        <EditText
            android:id="@+id/etnumbercBus"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:hint="NÃºmero de cuenta"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btnSearchc"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Buscar"
            android:backgroundTint="#5C151513"
            android:textSize="15dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        >

        <TextView
            android:id="@+id/tvemailCuenta"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/tvnamebus"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        >

        <TextView
            android:id="@+id/tvfechaCuenta"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Fecha:"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/tvfechabus"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        >

        <TextView
            android:id="@+id/tvbalanceCuenta"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Balance:"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/tvbalancebus"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btnBorrarBal"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#F44336"
        android:text="Eliminar esta Cuenta"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/tvbalancecAct"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Actualizar balance"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        />

        <EditText
            android:id="@+id/etbalancecAct"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Ingrese nuevo monto"
            android:inputType="number"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/btnActualizaBal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#5C151513"
            android:text="Actualizar"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_gravity="center"
            />

</LinearLayout>