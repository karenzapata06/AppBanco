<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cuenta"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_baseline_person_add_24"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/tvusuarioc"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Panel de Administrador"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp"
        android:textColor="#000"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center">

    <Button
        android:id="@+id/btnagregar"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Agregar cuentas"
        android:backgroundTint="#5C151513"
        android:textSize="20dp"

        />

    <Button
        android:id="@+id/btnbuscarOne"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Buscar cuentas"
        android:backgroundTint="#5C151513"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        />

</LinearLayout>

    <Button
        android:id="@+id/btnbuscar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ir a listado de cuentas"
        android:backgroundTint="#5C151513"
        android:textSize="18dp"
        android:layout_marginTop="30dp"
        />

</LinearLayout>